<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 운동 사진 -->
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imgExercise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"/>
    </FrameLayout>



    <!-- 운동 이름 -->
    <EditText
        android:id="@+id/tvExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 이름"
        android:hint="운동 이름 입력"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:text="세트"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:text="KG"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:text="횟수"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 운동 세트 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExerciseSets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

    <!-- 세트 추가/삭제 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnAddSet"
            android:backgroundTint="#D1ECFF"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="+ 세트 추가"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <Button
            android:backgroundTint="#D1ECFF"
            android:textColor="@color/black"
            android:id="@+id/btnRemoveSet"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="- 세트 삭제"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- 휴식 시간 및 완료 버튼 -->
    <LinearLayout
        android:background="@drawable/timer_background"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_weight="13"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/timer_text"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:autoSizeTextType="uniform"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="휴식 시간"/>
            <TextView
                android:id="@+id/tvRestTime"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:autoSizeTextType="uniform"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="60초"/>

        </LinearLayout>

        <Button
            android:textColor="@color/timer_text"
            android:id="@+id/btnIncreaseRest"
            android:backgroundTint="@color/timer_background"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="+10"/>

        <Button
            android:textColor="@color/timer_text"
            android:id="@+id/btnDecreaseRest"
            android:backgroundTint="@color/timer_background"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="-10"/>

        <Button
            android:id="@+id/btnComplete"
            android:backgroundTint="@color/timer_background"
            android:textColor="#757575"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:text="완료"/>
    </LinearLayout>
</LinearLayout>
